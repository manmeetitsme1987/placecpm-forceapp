<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Only_Select_Category_B_OR_Formula_B</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT(ISBLANK( P_L_Category_B__c )),
NOT(ISBLANK( P_L_Formula_B__c ))
)</errorConditionFormula>
