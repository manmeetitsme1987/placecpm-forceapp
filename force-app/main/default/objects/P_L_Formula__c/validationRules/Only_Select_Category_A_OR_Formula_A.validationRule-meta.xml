    <fullName>Only_Select_Category_A_OR_Formula_A</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT(ISBLANK(P_L_Category_A__c)),
NOT(ISBLANK( P_L_Formula_A__c))
